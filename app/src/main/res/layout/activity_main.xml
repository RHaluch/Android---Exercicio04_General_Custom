<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quantos valores deseja Informar?"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:textAlignment="center" />

    <SeekBar
        android:id="@+id/quantidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:max="5"
        android:min="1"
        android:progress="1" />

    <TextView
        android:id="@+id/textQuantidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:text="Quantidade (1)"
        android:textSize="20sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/valor1"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:hint="Digite o 1° Valor"
        />

    <EditText
        android:layout_width="match_parent"
        android:hint="Digite o 2° Valor"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/valor2"
        android:visibility="gone"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:hint="Digite o 3° Valor"
        android:id="@+id/valor3"
        android:visibility="gone"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:hint="Digite o 4° Valor"
        android:id="@+id/valor4"
        android:visibility="gone"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:hint="Digite o 5° Valor"
        android:id="@+id/valor5"
        android:visibility="gone"/>

    <Button
        android:id="@+id/lancar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="lancar"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Lançar Dados" />


</LinearLayout>